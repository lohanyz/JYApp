package cn.com.jy.helper;

import android.widget.Button;
import android.widget.EditText;
import android.widget.Spinner;
import android.widget.TextView;

public class GetTextUtil {
	public static String getText(Button v){
		String string;
		try {
			string=v.getText().toString();
		} catch (Exception e) {
			string="null";
		}
		return string;
	}
	public static String getText(TextView v){
		String string;
		try {
			string=v.getText().toString();
		} catch (Exception e) {
			string="null";
		}
		return string;
	}
	public static String getText(EditText v){
		String string;
		try {
			string=v.getText().toString();
		} catch (Exception e) {
			string="null";
		}
		return string;
	}
	public static String getText(Spinner v){
		String string;
		try {
			string=v.getSelectedItem().toString();
		} catch (Exception e) {
			string="null";
		}
		return string;
	}
}
